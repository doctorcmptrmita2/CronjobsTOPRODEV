APP_NAME="Cronjobs.to"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://cronjobs.to

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=cronjobs
DB_USERNAME=cronjobs
# DB_PASSWORD: MySQL kullanıcı şifresi (ZORUNLU)
DB_PASSWORD=GüçlüŞifre123!
# DB_ROOT_PASSWORD: MySQL root şifresi (OPSİYONEL - eğer set edilmezse, DB_PASSWORD kullanılır)
# DB_ROOT_PASSWORD=your_root_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CLIENT=phpredis
REDIS_DB=0
REDIS_CACHE_DB=1

# Queue Configuration
QUEUE_CONNECTION=database
BROADCAST_DRIVER=log
CACHE_STORE=database
FILESYSTEM_DISK=local
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=465
MAIL_USERNAME=noreply@cronjobs.to
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@cronjobs.to
MAIL_FROM_NAME="${APP_NAME}"

# Docker & Deployment
DOCKER_IMAGE=cronjobs:latest
AUTO_MIGRATE=true
AUTO_SEED=false

# Application Settings
TIMEZONE=UTC
LOCALE=en
FALLBACK_LOCALE=en

# Security
BCRYPT_ROUNDS=12

# Cache & Performance
CACHE_PREFIX=cronjobs_
SESSION_PREFIX=cronjobs_session_

